<sap.ui.core.mvc:View controllerName="demo.view.Master"
    xmlns="sap.m"
    xmlns:sap.ui.core="sap.ui.core" xmlns:sap.ui.core.mvc="sap.ui.core.mvc"
    xmlns:sap.ushell.ui.footerbar="sap.ushell.ui.footerbar" >
    <Page id="page" title="{i18n>MASTER_TITLE}">
        <content>
            <List id="list" select="handleSelect" mode="{device>/listMode}" noDataText="No data" growing="true" growingScrollToLoad="true" items="{/Customers}">
                <customData>
                    <sap.ui.core:CustomData key="sapDtResourcePath" value="Customers"></sap.ui.core:CustomData>
                </customData>
                <items>
                    <ObjectListItem id="MAIN_LIST_ITEM" press="handleSelect" type="{device>/listItemType}" counter="0" title="{CompanyName}" markFavorite="false" markFlagged="false" showMarkers="false">
                        <customData>
                            <sap.ui.core:CustomData key="sapDtResourcePath" value="Customers"></sap.ui.core:CustomData>
                        </customData>
                        <attributes>
                            <ObjectAttribute id="ATTR1" text="{Surname}" active="false"></ObjectAttribute>
                            <ObjectAttribute id="ATTR2" active="false"></ObjectAttribute>
                        </attributes>
                    </ObjectListItem>
                </items>
            </List>
        </content>
        <footer>
            <Bar>
                <contentLeft>
                    <sap.ushell.ui.footerbar:SettingsButton icon="sap-icon://action-settings" tooltip="Help"></sap.ushell.ui.footerbar:SettingsButton>
                </contentLeft>
            </Bar>
        </footer>
        <subHeader>
            <Bar>
                <contentMiddle>
                    <SearchField id="searchField" search="handleSearch" width="100%" placeholder="{i18n>MASTER_SEARCH_PLACEHOLDER}" showRefreshButton="{device>/isNoTouch}" tooltip="{i18n>MASTER_SEARCH_TOOLTIP}"></SearchField>
                </contentMiddle>
            </Bar>
        </subHeader>
    </Page>
</sap.ui.core.mvc:View>